#include <Wire.h> 

int led = 13;
int x = 0;

void setup() {
  
  pinMode(led,OUTPUT);
  Wire.begin(8);  //address coressponding to the save
  Wire.onReceive(recieve_event);

}

void recieve_event(int bytes){
  
  x = Wire.read();  
  
}

void loop() {
  Serial.println(x);
  if(x == '0'){
    digitalWrite(led,LOW);
    delay(10);
  }else if(x == '1'){
    digitalWrite(led,HIGH);
  }else{
    Serial.println("data error");
  }
  
}
